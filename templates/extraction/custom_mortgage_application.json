{
  "name": "custom_mortgage_application",
  "document_types": ["mortgage_application"],
  "fields": {
    "applicant_name": {
      "patterns": [
        "applicant\\s*:?\\s*([^\\n\\r]+)",
        "borrower\\s*:?\\s*([^\\n\\r]+)"
      ],
      "data_type": "string",
      "required": true,
      "validation": {
        "min_length": 2
      }
    },
    "loan_amount": {
      "patterns": [
        "loan\\s+amount\\s*:?\\s*\\$?([0-9,]+\\.?\\d*)",
        "requested\\s+amount\\s*:?\\s*\\$?([0-9,]+\\.?\\d*)"
      ],
      "data_type": "currency",
      "required": true,
      "validation": {
        "min_value": 1000
      }
    },
    "property_address": {
      "patterns": [
        "property\\s+address\\s*:?\\s*([^\\n\\r]+)",
        "subject\\s+property\\s*:?\\s*([^\\n\\r]+)"
      ],
      "data_type": "string",
      "required": true,
      "validation": {
        "min_length": 10
      }
    },
    "application_date": {
      "patterns": [
        "application\\s+date\\s*:?\\s*(\\d{1,2}[/\\-]\\d{1,2}[/\\-]\\d{2,4})",
        "date\\s+submitted\\s*:?\\s*(\\d{1,2}[/\\-]\\d{1,2}[/\\-]\\d{2,4})"
      ],
      "data_type": "date",
      "required": false,
      "validation": {
        "format": "date"
      }
    }
  }
}